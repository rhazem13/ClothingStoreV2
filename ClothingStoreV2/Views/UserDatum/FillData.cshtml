@model UserDatum
@{
    ViewBag.Title = "Complete Data";
}

<form asp-action="FillData" asp-controller="UserDatum" class="mt-3" method="post">
    <div class="form-group row">
        <label asp-for="FirstName">FirstName</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" placeholder="FirstName">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName">LastName</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" placeholder="LastName">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address1">Address1</label>
        <div class="col-sm-10">
            <input asp-for="Address1" class="form-control" placeholder="Address1">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address2">Address2</label>
        <div class="col-sm-10">
            <input asp-for="Address2" class="form-control" placeholder="Address2">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="ZipCode">ZipCode</label>
        <div class="col-sm-10">
            <input asp-for="ZipCode" class="form-control" placeholder="ZipCode">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="City">City</label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" placeholder="City">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Age">Age</label>
        <div class="col-sm-10">
            <input asp-for="Age" class="form-control" placeholder="Age">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Phone">Phone</label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" placeholder="Phone">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Gender">Select Gender</label>
        <div class="col-sm-10">
            <select asp-for="Gender">
                <option value="0">Male</option>
                <option value="1">Female</option>
            </select>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Complete</button>
    </div>
</form>